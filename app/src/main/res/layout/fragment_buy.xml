<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.niu.bee.fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <RadioGroup
        android:id="@+id/rg_buy_rgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/rb_buy_publish"
            style="@style/buyRadioButtonStyle"
            android:background="@drawable/buy_left_btn_bgd_seletor"
            android:checked="true"
            android:text="发布求购" />

        <RadioButton
            android:id="@+id/rb_buy_lists"
            style="@style/buyRadioButtonStyle"
            android:background="@drawable/buy_right_btn_bgd_seletor"
            android:text="求购列表" />
    </RadioGroup>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_buy_contanrs"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
